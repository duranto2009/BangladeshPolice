<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.peoplentech.bangladeshpolice.DmpActivity"
    android:background="@drawable/home_background">

    <Spinner
        android:id="@+id/dmpspinner"
        style="?android:attr/spinnerDropDownItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/card_side"
        android:layout_marginStart="@dimen/card_side"
        android:background="@drawable/custom_spinner_background"
        android:spinnerMode="dropdown"
        android:layout_marginTop="@dimen/card_side"
        android:layout_marginBottom="@dimen/nav_header_vertical_spacing" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
