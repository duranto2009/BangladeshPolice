<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.peoplentech.bangladeshpolice.LegendaryActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_legendary"
    android:background="@drawable/home_background">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dmp_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/dmplogo"
                android:src="@drawable/dmp"
                android:scaleType="fitCenter"
                android:background="#0b4c48"/>

            <TextView
                android:id="@+id/textdesignation"
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designation"
                android:textStyle="bold"
                android:textSize="30sp"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:textAlignment="center"
                android:background="@drawable/home_background"
                android:textColor="#ffffff"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/home_background">

                    <android.support.v7.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="40dp"
                        android:shape="ring"
                        android:id="@+id/cardmobile"
                        android:innerRadius="0dp"
                        android:thicknessRatio="1.9"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/ic_call_black_24dp"
                            android:id="@+id/mobileicon"
                            android:paddingBottom="@dimen/nav_header_vertical_spacing"
                            android:paddingTop="@dimen/nav_header_vertical_spacing" />

                    </android.support.v7.widget.CardView>


                <TextView
                    android:id="@+id/textMobile"
                    style="@style/Base.CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Mobile"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_horizontal_margin"/>

                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="40dp"
                    android:id="@+id/cardmessage"
                    android:shape="ring"
                    android:innerRadius="0dp"
                    android:thicknessRatio="1.9"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_message_black_24dp"
                    android:id="@+id/message"
                    android:paddingBottom="@dimen/nav_header_vertical_spacing"
                    android:paddingTop="@dimen/nav_header_vertical_spacing" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/home_background">
                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="40dp"
                    android:id="@+id/cardphone"
                    android:shape="ring"
                    android:innerRadius="0dp"
                    android:thicknessRatio="1.9"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_call_black_24dp"
                        android:id="@+id/phoneicon"
                        android:paddingBottom="@dimen/nav_header_vertical_spacing"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"/>


                </android.support.v7.widget.CardView>


                <TextView
                    android:id="@+id/textphone"
                    style="@style/Base.CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:text="Phone"
                    android:textColor="#ffffff"
                    android:textAlignment="center" />

                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="40dp"
                    android:shape="ring"
                    android:innerRadius="0dp"
                    android:thicknessRatio="1.9"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:visibility="invisible">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_message_black_24dp"
                        android:id="@+id/message2"
                        android:paddingBottom="@dimen/nav_header_vertical_spacing"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:visibility="invisible"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/home_background">

                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="40dp"
                    android:shape="ring"
                    android:id="@+id/cardmail"
                    android:innerRadius="0dp"
                    android:thicknessRatio="1.9"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_email_black_24dp"
                        android:id="@+id/emailicon"
                        android:paddingBottom="@dimen/nav_header_vertical_spacing"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"/>


                </android.support.v7.widget.CardView>


                <TextView
                    android:id="@+id/textEmail"
                    style="@style/Base.CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:text="Email"
                    android:textColor="#ffffff"
                    android:textAlignment="center" />

                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="40dp"
                    android:shape="ring"
                    android:innerRadius="0dp"
                    android:thicknessRatio="1.9"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:visibility="invisible">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_message_black_24dp"
                        android:id="@+id/message3"
                        android:paddingBottom="@dimen/nav_header_vertical_spacing"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:visibility="invisible"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v7.widget.CardView>


</LinearLayout>
